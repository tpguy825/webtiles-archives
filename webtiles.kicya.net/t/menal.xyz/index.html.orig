<!DOCTYPE html>
<html lang="en">
<head>
    <style>.tile-body {
  color: #111;
  background-color: #000;
  margin: 0;
}

img {
  width: 75px;
  height: auto;
  position: absolute;
  top: 100px;
  left: 90px;
}

#clickText {
  color: #fff;
  pointer-events: none;
  text-align: center;
  font-size: 24px;
  position: absolute;
  top: 25%;
  left: 50%;
  transform: translate(-50%, -50%);
}

#escapeText {
  color: #fff;
  pointer-events: none;
  text-align: center;
  font-size: 24px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
</style>
</head>
<body>
    <audio src="/t/menal.xyz/bounce.mp3" id="bounce" preload="metadata"></audio>
    <img id="dvd" src="/t/menal.xyz/miku.gif">
    <div id="clickText">Click me</div>
    <div id="escapeText" style="display:none;">Miku has escaped!!!</div>
    <script type="text/tilescript">var bounceSound = document.getElementById("bounce");
var img = document.getElementById("dvd");
var clickText = document.getElementById("clickText");
var escapeText = document.getElementById("escapeText");
var intervalId = setInterval(mikuMove, 50);

var speed = 4;
var tileSize = 250;
var x = tileSize / 2 - 25;
var y = tileSize / 2 - 25;
var angle = Math.random() * 2 * Math.PI;
var dx = Math.cos(angle) * speed;
var dy = Math.sin(angle) * speed;

clickText.style.display = "none";

function mikuStop() {
    clearInterval(intervalId);
    escapeText.style.display = "block";
    img.style.display = "none";
}

function mikuMove() {
    x += dx;
    y += dy;

    if (x <= 0 || x + img.offsetWidth >= tileSize) {
        dx *= -1.1;
        bounceSound.play();
        if (Math.abs(dx) > 1000) {
            mikuStop();
        }
    }

    if (y <= 0 || y + img.offsetHeight >= tileSize) {
        dy *= -1.1;
        bounceSound.play();
        if (Math.abs(dy) > 1000) {
            mikuStop();
        }
    }

    img.style.left = x + "px";
    img.style.top = y + "px";
}</script>
</body>
</html>