<head>
    <style>.tile-body {
  width: 250px;
  height: 250px;
  margin: 0;
  font-family: times new roman;
  overflow: hidden;
}

p {
  margin: 0;
}

#container {
  background: url("/t/oversurge.nekoweb.org/gv-mytyl-crop.png") 0 0 / cover;
  width: 250px;
  height: 250px;
  position: relative;
}

#top {
  color: #ff0;
  text-align: right;
  background: red;
  height: 25px;
  padding: 10px;
}

#bottom {
  z-index: 2;
  width: 250px;
  height: 250px;
  position: absolute;
  top: 0;
}

#left {
  background: url("/t/oversurge.nekoweb.org/waterlily-petals.png");
  width: 250px;
  height: 250px;
  position: absolute;
  top: 0;
  left: -10px;
}

#right {
  background: url("/t/oversurge.nekoweb.org/saturnbuddy-head.png");
  width: 250px;
  height: 250px;
  position: absolute;
  top: -1px;
  left: 4px;
}

#hovercont {
  z-index: 3;
  opacity: 0;
  background: url("/t/oversurge.nekoweb.org/cec-bg.jpg") 0 0 / 80px;
  width: 240px;
  height: 240px;
  padding: 10px;
  transition: all .3s ease-in-out;
  position: absolute;
  top: -250px;
}

#container:hover #hovercont {
  opacity: 1;
  top: 0;
}

h1 {
  color: #fff;
  text-align: center;
  text-shadow: 0 0 5px #000;
  margin: -5px 0 0 10px;
  padding: 0;
  font-size: 35px;
  font-style: italic;
  font-weight: bold;
  transform: scale(1, 1.5);
}

#title {
  z-index: 2;
  pointer-events: none;
  background: #000000b3;
  width: 270px;
  height: 80px;
  position: absolute;
  bottom: -30px;
  left: -13px;
  transform: rotate(-6deg);
  box-shadow: 0 0 5px #fff;
}

#gv {
  z-index: 1;
  pointer-events: none;
  background: url("/t/oversurge.nekoweb.org/gv-mytyl-crop-nobg.png") 0 0 / cover;
  width: 250px;
  height: 250px;
  position: absolute;
  bottom: 0;
  left: 0;
}

h2 {
  color: #fff;
  text-shadow: 3px 0 #219be4;
  background: #80d3ff;
  margin: 0 -10px;
  padding: 3px;
  font-size: 21px;
  font-style: italic;
  font-weight: bold;
}

#gv-sprite {
  z-index: 3;
  background: url("/t/oversurge.nekoweb.org/gv-idle-anim.gif") 0 0 / 100%;
  width: 80px;
  height: 100px;
  position: absolute;
  bottom: 20px;
  left: 1px;
}

.gvrun {
  animation: .5s linear slide, 1s .5s infinite hide;
  position: absolute;
}

@keyframes slide {
  0% {
    background: url("/t/oversurge.nekoweb.org/gv-run-anim.gif") bottom / 100%;
    width: 90px;
    height: 82px;
    transform: translate(0);
  }

  100% {
    background: url("/t/oversurge.nekoweb.org/gv-run-anim.gif") bottom / 100%;
    width: 90px;
    height: 82px;
    transform: translate(260px);
  }
}

@keyframes hide {
  0% {
    display: none;
  }

  100% {
    display: none;
  }
}

#links-cont {
  z-index: 2;
  width: 160px;
  list-style: none;
  position: absolute;
  top: 137px;
  left: 80px;
  overflow: hidden;
}

#links-cont li {
  text-align: right;
  margin-bottom: 6px;
  font-size: 20px;
  line-height: 17px;
  transition: all .3s ease-out;
}

#links-cont li:hover {
  letter-spacing: 2px;
}

.fadeout {
  transform-origin: 100%;
  animation: .2s linear .2s squish, 1s .4s infinite hide;
}

@keyframes squish {
  0% {
    opacity: 1;
    transform: scale(1);
  }

  100% {
    opacity: 0;
    transform: scale(0, 1);
  }
}

a {
  color: #fff;
  filter: drop-shadow(0 1px #72b5ff) drop-shadow(0 -1px #72b5ff) drop-shadow(1px 0 #72b5ff) drop-shadow(-1px 0 #72b5ff);
  font-weight: bold;
  text-decoration: underline;
}

a:hover {
  color: #72b5ff;
  filter: drop-shadow(0 1px #fff) drop-shadow(0 -1px #fff) drop-shadow(1px 0 #fff) drop-shadow(-1px 0 #fff);
  font-style: italic;
  font-weight: bold;
  text-decoration: underline;
}

#scroller {
  border-bottom: 2px dashed #80d3ff;
  width: 220px;
  height: 60px;
  padding: 5px;
  position: absolute;
  top: 50px;
  overflow-y: scroll;
}
</style>
