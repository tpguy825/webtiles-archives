      <script type="text/tilescript">
          var activity;
          
function getProgressData(startTime, endTime) {
    var now = new Date().getTime();
    var currentMs = now - startTime;

    if (currentMs < 0) currentMs = 0;

    function format(ms) {
        var totalSeconds = Math.floor(ms / 1000);
        var hours = Math.floor(totalSeconds / 3600);
        var minutes = Math.floor((totalSeconds % 3600) / 60);
        var seconds = totalSeconds % 60;
        
        var h = hours < 10 ? "0" + hours : hours;
        var m = minutes < 10 ? "0" + minutes : minutes;
        var s = seconds < 10 ? "0" + seconds : seconds;
        
        if (hours > 0) {
            return h + ":" + m + ":" + s;
        }
        return m + ":" + s;
    }

    if (!endTime) {
        return {
            current: format(currentMs)
        };
    }

    var totalMs = endTime - startTime;
    
    var actualProgressMs = currentMs > totalMs ? totalMs : currentMs;
    var percentComplete = (actualProgressMs / totalMs) * 100;

    return {
        current: format(actualProgressMs),
        total: format(totalMs),
        percent: percentComplete.toFixed(2)
    };
}

          
          function setActivityProgress() {
              if (activity && activity.timestamps) {
                  document.getElementById("progress-bar-container").style.display = "flex";
                  var progress = getProgressData(activity.timestamps.start, activity.timestamps.end);
                  document.getElementById("start-time").innerText = progress.current;
                  if (activity.timestamps.end) {
                      document.getElementById("progress-bar").style.display = "flex";
                      document.getElementById("end-time").style.display = "inline";
                      document.getElementById("end-time").innerText = progress.total;
                      document.getElementById("progress-bar-inner").style.width = progress.percent + "%";
                  } else {
                      document.getElementById("progress-bar").style.display = "none";
                      document.getElementById("end-time").style.display = "none";
                  }
                  
              } else {
                  document.getElementById("progress-bar-container").style.display = "none";
              }
          }
          
      	function updateDiscord	() {
            
            var xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function() {
                if (xhttp.readyState == 4 && xhttp.status == 200) {
                   var json = JSON.parse(xhttp.responseText);
                    document.getElementById("disc-status").innerText = json.status;
                    document.getElementById("disc-status").className = json.status;
                    document.getElementById("disc-state").style.display = "none";
                    document.getElementById("disc-details").style.display = "none";
                    
                    
                    if (json.activities.length) {
                    	activity = json.activities[0];
                        

                        var activityType = "";
                        if (activity.type === 0) activityType = "Playing";
                        if (activity.type === 2) activityType = "Listening to";
                        if (activityType) {
                            document.getElementById("activity-container").style.display = "flex";
                        	document.getElementById("disc-action").innerText = activityType;
                        	document.getElementById("disc-name").innerText = activity.name;
                            document.getElementById("disc-details").innerText = activity.details || "";
                            document.getElementById("disc-state").innerText = activity.state || "";
                            if (document.getElementById("disc-state").innerText) {
								document.getElementById("disc-state").style.display = "block";
                            }  
                            if (document.getElementById("disc-details").innerText) {
								document.getElementById("disc-details").style.display = "block";
                            }
                            
                            setActivityProgress();
                        }
                       
                    } else {
                        document.getElementById("activity-container").style.display = "none";
                    }
                    
                }
            };
            xhttp.open("GET", "https://supertiger.nerimity.com/trackdispresence/260371016348336128", true);
            xhttp.send();
        }
          updateDiscord();
          setInterval(function() {
              updateDiscord();
          }, 10000)
          
          
          
          setInterval(function() {
        	setActivityProgress();

          }, 1000)
      </script>
