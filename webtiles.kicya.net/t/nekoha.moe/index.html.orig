</style>
        <script type="text/tilescript">// Fetch the current counter
function loadCounter() {
    var xhr = new XMLHttpRequest();
    xhr.open("GET", "https://nekoha.moe/api/webtiles/counter", true);

    xhr.onreadystatechange = function () {
        if (xhr.readyState === 4) {
            if (xhr.status === 200) {
                try {
                    var data = JSON.parse(xhr.responseText);
                    var btn = document.getElementById("global-counter");
                    if (btn) btn.textContent = data.counter;
                } catch (e) {
                    console.error("Failed to parse counter JSON:", e);
                }
            } else {
                console.error("Failed to load counter:", xhr.status);
            }
        }
    };

    xhr.send(null);
}

// Run on start
loadCounter();

// increment the counter on button click
var btn = document.getElementById("global-counter");
if (btn) {
    btn.onclick = function () {
        var xhr = new XMLHttpRequest();
        xhr.open("GET", "https://nekoha.moe/api/webtiles/increment", true);
        xhr.onreadystatechange = function () {
            if (xhr.readyState === 4 && xhr.status === 200) {
                try {
                    var data = JSON.parse(xhr.responseText);
                    btn.textContent = data.counter;
                } catch (e) {
                    console.error("Failed to parse increment JSON:", e);
                }
            }
        };
        xhr.send(null);
    };
}
</script>
