		<script type="text/tilescript">var eki = document.getElementById('eki')
var konbi = document.getElementById('konbi')
var tori = document.getElementById('tori')
var walk1 = document.getElementById('walk1')
var walk2 = document.getElementById('walk2')
var shr_a = document.getElementById('shr_a')
var journal = document.getElementById('journal')
var temple = document.getElementById('temple')
var garden1 = document.getElementById('garden1')
var garden2 = document.getElementById('garden2')

document.getElementById('click11').addEventListener('click', page2);
document.getElementById('click11').addEventListener('mousemove', tooltip);

document.getElementById('click21').addEventListener('click', page3);
document.getElementById('click20').addEventListener('click', page1);

function page2() {
    tori.setAttribute("class", "hidden")
    walk1.setAttribute("class", "walk1")
}
function page1() {
    tori.setAttribute("class", "tori")
    walk1.setAttribute("class", "hidden")
}
function page3() {
    walk2.setAttribute("class", "walk2")
    walk1.setAttribute("class", "hidden")
}

function stone() {
	var pling = new Audio('/sushiro.mp3');
    pling.play();
}

function tooltip(e) {
    var x = e.clientX;
    var y = e.clientY;
    document.getElementById("tooltip").style.left = x + "px";
 	document.getElementById("tooltip").style.top = y + "px";
}</script>
