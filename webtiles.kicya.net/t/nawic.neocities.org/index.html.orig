}

.hidden {
  display: none;
}

#tooltip {
  opacity: 0;
  color: #fff;
  background-color: #000;
  position: absolute;
  top: 0;
  left: 0;
}

#click11:hover #tooltip {
  opacity: 1;
}

.walkway {
  opacity: .5;
  z-index: 9999;
  cursor: pointer;
  background-color: #000;
  border: none;
  position: absolute;
}

.tori {
  display: block;
}

.shrine_area, .journal, .temple {
  display: none;
}
</style>
</head>

    <body>
        
         
        <div class="tori" id="tori">
            <h1 style="position:relative; z-index:9998; pointer-event:none; color:cyan;">Point & Click Tile</h1>
        	<p style="position:relative; z-index:9998; pointer-event:none; color:cyan;">Too sick to work rn...</p> 
            
        	<div class="walkway" id="click11" style="position:absolute; width: 85px; height: 100px; top: 100px; left: 85px;">
            	<div id="tooltip">Enter Shrine</div>
            </div>
			<div class="walkway" id="click10" style="position:absolute; width: 200px; height: 30px; bottom: 0px; left: 25px;"></div>
