<!DOCTYPE html>
<html>
<head>
  
  
  
  <style>* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html, .tile-body {
  width: 250px;
  height: 250px;
  overflow: hidden;
}

.tile-body {
  background-color: tan;
  background-image: radial-gradient(circle at 20% 20%, #c19a6b 8px, #0000 8px), radial-gradient(circle at 70% 60%, sienna 6px, #0000 6px), radial-gradient(circle at 45% 10%, peru 5px, #0000 5px), radial-gradient(circle at 10% 55%, #b8860b 6px, #0000 6px), radial-gradient(circle at 80% 30%, sienna 4px, #0000 4px), radial-gradient(circle at 35% 80%, #c19a6b 7px, #0000 7px), radial-gradient(circle at 90% 85%, peru 5px, #0000 5px), linear-gradient(45deg, #d2b48ce6, #c19a6bb3, #a0522d80);
  background-size: 60px 60px, 60px 60px, 60px 60px, 60px 60px, 60px 60px, 60px 60px, 60px 60px, 400% 400%;
  font-family: Courier New, monospace;
  animation: 20s linear infinite desert-shift;
}

@keyframes desert-shift {
  0% {
    background-position: 0 0;
  }

  100% {
    background-position: 100% 30%;
  }
}

.tile-link {
  width: 250px;
  height: 250px;
  color: inherit;
  text-decoration: none;
  display: block;
}

.container {
  width: 250px;
  height: 250px;
  position: relative;
}

.hat-row {
  justify-content: space-around;
  align-items: center;
  height: 28px;
  display: flex;
  position: absolute;
  left: 0;
  right: 0;
  overflow: hidden;
}

.top-hats {
  animation: 3s ease-in-out infinite hat-bounce-down;
  top: 0;
}

.bottom-hats {
  animation: 3.2s ease-in-out infinite hat-bounce-up;
  bottom: 0;
}

.hat-column {
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 28px;
  display: flex;
  position: absolute;
  top: 28px;
  bottom: 28px;
  overflow: hidden;
}

.left-hats {
  animation: 3s ease-in-out infinite hat-bounce-right;
  left: 0;
}

.right-hats {
  animation: 3.5s ease-in-out infinite hat-bounce-left;
  right: 0;
}

@keyframes hat-bounce-right {
  0%, 100% {
    transform: translateX(0);
  }

  50% {
    transform: translateX(3px);
  }
}

@keyframes hat-bounce-left {
  0%, 100% {
    transform: translateX(0);
  }

  50% {
    transform: translateX(-3px);
  }
}

@keyframes hat-bounce-down {
  0%, 100% {
    transform: translateY(0);
  }

  50% {
    transform: translateY(3px);
  }
}

@keyframes hat-bounce-up {
  0%, 100% {
    transform: translateY(0);
  }

  50% {
    transform: translateY(-3px);
  }
}

.hat-icon {
  filter: sepia() saturate(150%) hue-rotate(20deg);
  width: 22px;
  height: 22px;
  animation: 2s ease-in-out infinite hat-wiggle;
}

.hat-icon:nth-child(odd) {
  animation-delay: .5s;
}

.hat-icon:nth-child(2n) {
  animation-delay: 1s;
}

@keyframes hat-wiggle {
  0%, 100% {
    transform: rotate(0);
  }

  25% {
    transform: rotate(3deg);
  }

  75% {
    transform: rotate(-3deg);
  }
}

.main-content {
  justify-content: center;
  align-items: center;
  display: flex;
  position: absolute;
  inset: 16px;
}

.title-box {
  text-align: center;
  background: linear-gradient(135deg, #8b4513, sienna);
  border: 3px solid #654321;
  border-radius: 10px;
  flex-direction: column;
  justify-content: center;
  width: 80%;
  height: 80%;
  padding: 20px 15px;
  display: flex;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4px 8px #0000004d, inset 0 2px 4px #fff3;
}

.title-box:before {
  content: "|||||||||||||||||||||";
  color: #654321;
  letter-spacing: 0;
  font-size: 8px;
  animation: 4s ease-in-out infinite fence-sway;
  position: absolute;
  top: -3px;
  left: 0;
  right: 0;
}

@keyframes fence-sway {
  0%, 100% {
    transform: translateX(0);
  }

  50% {
    transform: translateX(2px);
  }
}

.site-title {
  color: gold;
  text-shadow: 2px 2px #8b0000, 3px 3px 6px #00000080;
  font-family: Courier New, monospace;
  font-size: 18px;
  font-weight: bold;
  line-height: 1.3;
  animation: 2s ease-in-out infinite alternate title-glow;
}

@keyframes title-glow {
  from {
    text-shadow: 2px 2px #8b0000, 3px 3px 6px #00000080;
  }

  to {
    text-shadow: 2px 2px #8b0000, 3px 3px 12px #ffd700cc;
  }
}

.howdy {
  color: #fff8dc;
  text-shadow: 1px 1px 2px #00000080;
  margin-top: 10px;
  font-size: 13px;
  font-style: italic;
}

.visit-text {
  color: #ffe4b5;
  margin-top: 8px;
  font-size: 11px;
  text-decoration: underline;
}
</style>
